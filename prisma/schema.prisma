generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Notifications {
    id          String    @id
    recipientId String
    content     String
    category    String
    readAt      DateTime?
    createdAt   DateTime  @default(now())

    @@index([recipientId])
}
